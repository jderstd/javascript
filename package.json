{
    "private": true,
    "scripts": {
        "fmt": "biome check --write .",
        "tsc": "npm-run-all --parallel tsc:core tsc:hono",
        "tsc:core": "cd packages/core && tsc --noEmit",
        "tsc:hono": "cd packages/hono && tsc --noEmit",
        "build": "npm-run-all --sequential build:core build:hono",
        "build:core": "cd packages/core && tsup",
        "build:hono": "cd packages/hono && tsup",
        "test": "npm-run-all --sequential test:hono test:core",
        "test:core": "cd tests/core && vitest run",
        "test:hono": "cd tests/hono && vitest run",
        "api": "npm-run-all --parallel api:core api:hono",
        "api:core": "cd packages/core && typedoc",
        "api:hono": "cd packages/hono && typedoc",
        "": ""
    },
    "devDependencies": {
        "@apst/biome": "~0.1.0",
        "@apst/tsconfig": "~0.1.0",
        "@biomejs/biome": "^1.9.4",
        "npm-run-all2": "^8.0.1",
        "tsup": "^8.5.0",
        "typedoc": "~0.28.4",
        "typedoc-plugin-markdown": "^4.6.3",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vitest": "^3.1.3"
    }
}
